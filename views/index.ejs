<%- include("./partials/head.ejs") %>

<nav>
    <div class="nav-wrapper">
        <img src="" class="img-responsive" alt="">
        <button class="menu-icon"></button>
    </div>
</nav>

<div class="content-wrapper">
    <section class="">
        <h1>Digitale Werkplek</h1>
        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Illum molestiae eveniet culpa rem adipisci aperiam rerum. Corporis itaque nesciunt minima nemo accusamus ipsam veniam, fugiat doloribus deleniti, natus totam ducimus.</p>
        <a href="">Services</a>
    </section>

    <div class="divider-graphic"></div>

    <section class="list-of-pros">
        <h2>Voordelen</h2>
        <ul>
            <li class="list-item"><span>Check-icon</span><p>Pro-actief werkplekbeheer & monitoring</p></li>
            <li class="list-item"><span>Check-icon</span><p>Solide backups</p></li>
            <li class="list-item"><span>Check-icon</span><p>Hardware [ as a service ]</p></li>
            <li class="list-item"><span>Check-icon</span><p>Microsoft-licenties</p></li>
            <li class="list-item"><span>Check-icon</span><p>Security - anti-virus & anti-ransomware</p></li>
        </ul>
    </section>

    <section class="service-contracts">

        <ul class="nav nav-tabs">
            <% selectedContracts.forEach(contract => { %>
                
                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">Basic</a>
                    <div class="desktop-contract-wrapper">
                        <div class="contract-info-wrapper">
                            <p class="contract-price"><%- contract.list_price %></p>
                            <p class="price-info"><%- contract.price_unit %></p>
                        </div>
                        <a href="#">Lees meer</a>
                    </div>
                </li>
            <% }) %>
        </ul>

        <!-- Here goes buttons for switching contracts -->

		<!-- Basic -->
		<div class="table-responsive">
			<table class="table table-primary">
				<thead>
					<tr>
						<th scope="col">Activiteit</th>
						<th scope="col">---</th>
						<th scope="col">---</th>
					</tr>
				</thead>
				<tbody>
					<tr class="table-row">
						<!-- Contract - Basic -->
						<td scope="row">R1C1</td> 
						<!-- Contract - Premium -->
						<td>R1C2</td>
						<!-- Contract - Complete -->
						<td>R1C3</td>
					</tr>
					<% contract_basic.forEach(activity => { %>
						<% activityTranslations.data.forEach(activityTranslation => { %>
							<% if (activity.id === activityTranslation.id) { %>
								<tr class="">
									<td scope="row"><%- activityTranslation.title %></td>
									<td>Tooltip</td>
									<% if (activity.charged_minutes === 0) { %>
										<td>Inbegrepen</td>
									<% } else { %>
										<td>Niet inbegrepen</td>
									<% } %>
								</tr>
							<% } %>
							<% }) %>
							
					<% }) %>
				</tbody>
			</table>
		</div>

		<!-- Premium -->
		<div class="table-responsive">
			<table class="table table-primary">
				<thead>
					<tr>
						<th scope="col">Activiteit</th>
						<th scope="col">---</th>
						<th scope="col">---</th>
					</tr>
				</thead>
				<tbody>
					<tr class="table-row">
						<!-- Contract - Basic -->
						<td scope="row">R1C1</td> 
						<!-- Contract - Premium -->
						<td>R1C2</td>
						<!-- Contract - Complete -->
						<td>R1C3</td>
					</tr>
					<% contract_premium.forEach(activity => { %>
						<tr class="">
							<td scope="row"><%- activity.activities_id %></td>
							<td>Tooltip</td>
							<% if (activity.charged_minutes === 0) { %>
								<td>Inbegrepen</td>
							<% } else { %>
								<td>Niet inbegrepen</td>
							<% } %>
						</tr>
					<% }) %>
				</tbody>
			</table>
		</div>

		<!-- Complete -->
		<div class="table-responsive">
			<table class="table table-primary">
				<thead>
					<tr>
						<th scope="col">Activiteit</th>
						<th scope="col">---</th>
						<th scope="col">---</th>
					</tr>
				</thead>
				<tbody>
					<tr class="table-row">
						<!-- Contract - Basic -->
						<td scope="row">R1C1</td> 
						<!-- Contract - Premium -->
						<td>R1C2</td>
						<!-- Contract - Complete -->
						<td>R1C3</td>
					</tr>
					<% contract_complete.forEach(activity => { %>
						<tr class="">
							<td scope="row"><%- activity.activities_id %></td>
							<td>Tooltip</td>
							<% if (activity.charged_minutes === 0) { %>
								<td>Inbegrepen</td>
							<% } else { %>
								<td>Niet inbegrepen</td>
							<% } %>
						</tr>
					<% }) %>
				</tbody>
			</table>
		</div>

        
        
    </section>


</div>




<%- include("./partials/foot.ejs") %>