<%- include("./partials/head.ejs") %>

<nav>
	<div class="nav-wrapper">
		<img src="https://fivespark.com/hubfs/Fivespark_Oct_2022/Images/white_logo.svg" class="logo-img" alt="">
		<!-- <img src="https://fivespark.com/hubfs/Fivespark_Oct_2022/Images/Logo.svg" class="logo-img" alt=""> -->
		<!-- <button class="menu-icon">Menu</button> -->
	</div>
</nav>

<div class="content-wrapper">

	<header>
		<div class="header-sections-wrapper">
			<section class="intro-section">
				<h1>Digitale Werkplek</h1>
				<blockquote>
					<p>Een werkplek waar
						je op kunt bouwen</p>
				</blockquote>
				<a href="#service-contracts">Bekijk contracten</a>
			</section>

			<section class="list-of-pros">
				<h2>Voordelen</h2>
				<ul>
					<li class="list-item"><img src="../icons/check.svg" alt="">
						<p>Pro-actief werkplekbeheer & monitoring</p>
					</li>
					<li class="list-item"><img src="../icons/check.svg" alt="">
						<p>Solide backups</p>
					</li>
					<li class="list-item"><img src="../icons/check.svg" alt="">
						<p>Hardware [ as a service ]</p>
					</li>
					<li class="list-item"><img src="../icons/check.svg" alt="">
						<p>Microsoft-licenties</p>
					</li>
					<li class="list-item"><img src="../icons/check.svg" alt="">
						<p>Security - anti-virus & anti-ransomware</p>
					</li>
				</ul>
			</section>
		</div>

		<section class="contract-representation">
			<section class="representation-info">
				<div>
					<h2>Kies jouw pakket</h2>
					<p>Maak keuze uit één van onze paketten.</p>
				</div>

				<a class="choose-contract-btn" href="#service-contracts">Kies pakket</a>
			</section>
			<section class="static-contracts">
				<% for( let i = 0; i < selectedContracts.length; i++ ) { %>
				<article>
					<div>
						<h3 class="contract-name"><%- selectedContractTranslations[i].title %></h3>
						<div class="price-wrapper">
							<p class="contract-price">€<%- selectedContracts[i].list_price %></p>
							<p class="price-info">per gebruiker p/mnd</p>
							
						</div>
						<p class="description"><%- selectedContractTranslations[i].description %></p>
						
					</div>
					<button>Lees meer</button>
				</article>
				<% } %>

			</section>
		</section>

	</header>

	<div class="divider-graphic"></div>

	<section id="service-contracts" class="service-contracts">
		<ul class="nav-tabs">
			<% for( let i = 0; i < selectedContracts.length; i++ ) { %>
			<li class="nav-item">
				<div class="button-wrapper">
					<button class="tab-button"><%- selectedContractTranslations[i].title %></button>
					<p class="contract-price">€<%- selectedContracts[i].list_price %></p>
				</div>
				<div class="desktop-contract-wrapper">
					<div class="contract-info-wrapper">
						<p class="price-info"><%- selectedContracts[i].price_unit  %></p>
					</div>
					<a href="#">Lees meer</a>
				</div>
			</li>
			<% } %>
		</ul>
		<div class="table-wrapper">
			<!-- Basic -->
			<div class="table-responsive">
				<table class="contract-table">
					<tbody>
						<% contract_basic.forEach(activity => { %>
						<% activityTranslations.data.forEach(activityTranslation => { %>
						<% if (activity.activities_id === activityTranslation.activities_id && activityTranslation.languages_code === language) { %>
						<tr>
							<td><%- activityTranslation.title %></td>
							<!-- <td><img src="../icons/tooltip.svg"></td> -->
							<% if (activity.charged_minutes === 0) { %>
							<td><img src="../icons/Check_icon.svg" alt="rondje met vinkje er in."></td>
							<% } else { %>
							<td><img src="../icons/X_icon.svg" alt="rondje met kruisje er in."></td>
							<% } %>
						</tr>
						<% } %>
						<% }) %>
						<% }) %>
					</tbody>
				</table>
			</div>

			<!-- Premium -->
			<div class="table-responsive">
				<table class="contract-table hide">
					<tbody>
						<% contract_complete.forEach(activity => { %>
						<% activityTranslations.data.forEach(activityTranslation => { %>
						<% if (activity.activities_id === activityTranslation.activities_id) { %>
						<tr>
							<td><%- activityTranslation.title %></td>
							<!-- <td><img src="../icons/tooltip.svg"></td> -->
							<% if (activity.charged_minutes === 0) { %>
							<td><img src="../icons/Check_icon.svg" alt="rondje met vinkje er in."></td>
							<% } else { %>
							<td><img src="../icons/X_icon.svg" alt="rondje met kruisje er in."></td>
							<% } %>
						</tr>
						<% } %>
						<% }) %>
						<% }) %>
					</tbody>
				</table>
			</div>

			<!-- Complete -->
			<div class="table-responsive">
				<table class="contract-table hide">
					<tbody>
						<% contract_premium.forEach(activity => { %>
						<% activityTranslations.data.forEach(activityTranslation => { %>
						<% if (activity.activities_id === activityTranslation.activities_id) { %>
						<tr>
							<td><%- activityTranslation.title %></td>
							<!-- <td><img src="../icons/tooltip.svg"></td> -->
							<% if (activity.charged_minutes === 0) { %>
							<td><img src="../icons/Check_icon.svg" alt="rondje met vinkje er in."></td>
							<% } else { %>
							<td><img src="../icons/X_icon.svg" alt="rondje met kruisje er in."></td>
							<% } %>
						</tr>
						<% } %>
						<% }) %>
						<% }) %>
					</tbody>
				</table>
			</div>
		</div>

	</section>
</div>




<%- include("./partials/foot.ejs") %>